---
import { Header } from "../components/Header/Header"
import { Footer } from "../components/Footer/Footer"
import { Authentication } from "../components/Authentication/Authentication"
import type { SocialLink, FooterProps } from "../components/Footer/types"
import { SideBar } from "../components/SideBar/SideBar"
import type { SideBarProps } from "../components/SideBar/types"
import "../styles/global/mainLayout.scss"

const { title } = Astro.props
// get these images from the backend in the future
const profileImageUrl = "https://i.pinimg.com/564x/f2/b4/e4/f2b4e4f34acc9395e1e0d228c44abd05.jpg"
const sideFooterImg = "https://ik.imagekit.io/fy1b7fw4h/6f40677ae97db11bd2f32dc2670fbe03-removebg-preview.png" 
const favicon = profileImageUrl
const descImage = profileImageUrl
// get these images from the backend in the future

const userName = "thullyDev"
const fullName = "Thulaganyo Mooki"
const role = "fullstack"
const profileDescription = "🔥 💯 Fullstack Developer 👨🏿‍💻 , Backend Developer  🛠️,  Frontend Developer  🖌️, Weeb 😄 , MangaReader 👀, south african 🇿🇦"
const donateSlug = "Kowareta"
const donateLink = "https://buymeacoffee.com/"
const seoDesc = `${fullName} is an experienced fullstack developer with a focus on backend development using Python. Explore my portfolio to see my work in web development, backend systems, and more.`
const seoTitle = "Fullstack Developer | Python Backend Specialist"

const sideBarProps: SideBarProps = {
	profileImageUrl,
	userName,
	fullName,
	profileDescription,
	donateSlug,
	donateLink,
	role
} as const;
const socialLinks: SocialLink[] = [
	{
		icon: "fab fa-linkedin",
		name: "LinkedIn",
		link: "https://www.linkedin.com/in/thullydev",
	},
	{
		icon: "fa fa-envelope",
		name: "Email",
		link: "mailto:your-email@example.com",
	},
	{
		icon: "fab fa-twitter",
		name: "Twitter",
		link: "https://twitter.com/thullydev",
	},
	{
		icon: "fab fa-github",
		name: "GitHub",
		link: "https://github.com/thullydev",
	},
	{
		icon: "fab fa-youtube",
		name: "YouTube",
		link: "https://www.youtube.com/channel/UC-thullydev",
	}
] as const;

const footerProps: FooterProps = {
	sideFooterImg,
	socialLinks,
} as const;

---

<!DOCTYPE html>
<html lang="en">
	<head>
	  <meta charset="UTF-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <link rel="icon" type="image/x-icon" href={favicon}>
	  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/devicon/2.16.0/devicon.min.css" integrity="sha512-BlFCHJWngPEHme4TwlEob6dPLfoNaQBTTISPwr4344nxR353w2vgGZ7GiSadbbeR20cJeeM0u1I2lAZuIZ1aOQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />  
	  <title>{title} | {fullName} | {seoTitle} </title>
	  <meta name="description" content={seoDesc}>
	  <meta name="keywords" content="{fullName}, Fullstack Developer, Backend Developer, Python Developer, Web Development, API Development, JavaScript, TypeScript, React, Node.js, Django, FastAPI, Portfolio">
	  <meta name="author" content="{fullName}">
	  
	  <!-- Open Graph / Facebook -->
	  <meta property="og:title" content="{fullName} | {seoTitle}">
	  <meta property="og:description" content={seoDesc}>
	  <meta property="og:type" content="website">
	  <meta property="og:image" content={descImage}> 
	  
	  <!-- Twitter -->
	  <meta name="twitter:card" content="summary_large_image">
	  <meta name="twitter:title" content="{fullName} | {seoTitle}">
	  <meta name="twitter:description" content={seoDesc}>
	  <meta name="twitter:image" content={descImage}> 
	</head>
	<body class="scrollable">
		<div class="content dark:bg-gray-900 text-white relative">
			<SideBar {...sideBarProps} />
			<div class="main-side">
				<Header client:load />
				<main class="main-content p-3">
					<slot/>
				</main>
				<Footer {...footerProps} />
			</div>
			<Authentication client:load />
		</div>
	</body>
</html>