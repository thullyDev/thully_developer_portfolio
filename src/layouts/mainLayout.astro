---
import { Header } from "../components/Header/Header"
import { Footer } from "../components/Footer/Footer"
import { SideBar } from "../components/SideBar/SideBar"
import type { SideBarProps } from "../components/SideBar/types"

const { title } = Astro.props
const profileImageUrl = "https://i.pinimg.com/564x/f2/b4/e4/f2b4e4f34acc9395e1e0d228c44abd05.jpg"
const favicon = profileImageUrl
const descImage = profileImageUrl
const userName = "thullyDev"
const fullName = "Thulaganyo Mooki"
const profileDescription = "🔥 💯 Programmer 👨🏿‍💻 , Weeb 😄 , MangaReader 👀, south african 🇿🇦"
const donateSlug = "Kowareta"
const donateLink = "https://buymeacoffee.com/"
const sideBarProps = {
	profileImageUrl,
	userName,
	fullName,
	profileDescription,
	donateSlug,
	donateLink,
} as SideBarProps;
---

<!DOCTYPE html>
<html lang="en">
	<head>
	  <meta charset="UTF-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <link rel="icon" type="image/x-icon" href={favicon}>  
	  <title>{title} | {fullName} | Fullstack Developer | Python Backend Specialist</title>
	  <meta name="description" content="{fullName} is an experienced fullstack developer with a focus on backend development using Python. Explore my portfolio to see my work in web development, backend systems, and more.">
	  <meta name="keywords" content="{fullName}, Fullstack Developer, Backend Developer, Python Developer, Web Development, API Development, JavaScript, TypeScript, React, Node.js, Django, FastAPI, Portfolio">
	  <meta name="author" content="{fullName}">
	  
	  <!-- Open Graph / Facebook -->
	  <meta property="og:title" content="{fullName} | Fullstack Developer | Python Backend Specialist">
	  <meta property="og:description" content="{fullName} is an experienced fullstack developer with a focus on backend development using Python. Explore my portfolio to see my work in web development, backend systems, and more.">
	  <meta property="og:type" content="website">
	  <meta property="og:image" content={descImage}> 
	  
	  <!-- Twitter -->
	  <meta name="twitter:card" content="summary_large_image">
	  <meta name="twitter:title" content="{fullName} | Fullstack Developer | Python Backend Specialist">
	  <meta name="twitter:description" content="{fullName} is an experienced fullstack developer with a focus on backend development using Python. Explore my portfolio to see my work in web development, backend systems, and more.">
	  <meta name="twitter:image" content={descImage}> 
	</head>
	<body>
		<div class="content">
			<SideBar {...sideBarProps}/>
			<div class="main-side">
				<Header />
				<slot/>
			</div>
			<Footer />
		</div>
	</body>
</html>